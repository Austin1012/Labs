#include <iostream>
using namespace std;

int main() {

	int h;
	cout << "Enter a pyramid height: ";
	cin >> h;

	if (h <= 2 or h >=9){
		cout << "Try a number between 3 and 8: ";
		cin >> h;
	}

	for (int i = 0; i < h; i++)
		cout << " ";
		cout << "*" << endl;

	return 0;
}
