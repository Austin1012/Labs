#include <iostream>
using namespace std;

int main() {

	int h;
	int s = 1;
	cout << "Enter a pyramid height: ";
	cin >> h;

	if (h <= 2 or h >=9){
		cout << "Try a number between 3 and 8: ";
		cin >> h;
	}

	for (int i = 0; i < h-1; i++)
		cout << " ";

	cout << "*" << endl;
	for (int l = 0; l < h; l++){
		for (int c = 0; c < h-1; c++)
			cout << " ";
		cout << "*";
		for (int a = 0; a < s; a++){
			cout <<" ";
			s += 2;
		}
		cout << "*" << endl;
	}
	for (int b = 0; b < h + (h-1); b++)
		cout << "*";





	return 0;
}
